<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Today_Ranking"
    android:id="@+id/today_ranking_layout">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 몽상"
        android:id="@+id/today_ranking2_topmenu"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#07b3c5"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout

        android:id="@+id/rank2navitab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/today_ranking2_topmenu">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭킹순"
            android:id="@+id/ranking2_rankbtn"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#c0c5c6"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:id="@+id/ranking2_newbtn"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today_ranking2_list"
        android:layout_below="@+id/rank2navitab"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
